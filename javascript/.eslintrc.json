{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "array-callback-return": "error",
    "class-methods-use-this": "error",
    "no-loop-func": "error",
    "no-console": "error"
  }
}
